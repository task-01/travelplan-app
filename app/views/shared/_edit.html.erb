<div class="top edit-top py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow-lg">
          <div class="card-header bg-primary text-white">
            <i class="icon-arrow-right"></i> Travel Plan App - プロフィール編集Page
          </div>
          <div class="card-body">
            <%= form_with model: @user do |f| %>
              <div class="mb-4">
                <label class="form-label fs-5 mb-2"><%= f.label :image, "アイコン画像" %></label>
                <%= f.file_field :image, class: "form-control mb-3" %>
              </div>
              <div class="mb-4">
                <label class="form-label fs-5 mb-2"><%= f.label :name, "ユーザー名" %></label>
                <%= f.text_field :name, class: "form-control mb-3" %>
              </div>
              <div class="d-flex justify-content-end">
                <%= f.submit "更新", class: "btn btn-primary" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
