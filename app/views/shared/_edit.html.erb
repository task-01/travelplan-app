<% if @user.guest_member? %>
  <p class="bg-danger text-light px-4 fw-bold mb-0">ゲストユーザーは編集することはできません</p>
<% end %>
<div class="top edit-top py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow-lg">
          <div class="card-header bg-primary text-white">
            <i class="icon-arrow-right"></i> Travel Plan App - プロフィール編集Page
          </div>
          <div class="card-body">
            <%= form_with model: @user do |f| %>
              <div class="mb-4">
                <label class="form-label fs-5 mb-2"><%= f.label :image, "アイコン画像" %></label>
                <%= f.file_field :image, class: "form-control mb-3", disabled: @user.guest_member? %>
              </div>
              <div class="mb-4">
                <label class="form-label fs-5 mb-2"><%= f.label :name, "ユーザー名" %></label>
                <%= f.text_field :name, class: "form-control mb-3", disabled: @user.guest_member? %>
              </div>
              <div class="mb-4">
                <label class="form-label fs-5 mb-2"><%= f.label :email, "メールアドレス" %></label>
                <%= f.text_field :email, class: "form-control mb-3", disabled: @user.guest_member? %>
              </div>
              <div class="mb-4">
                <%= f.label :password, "新しいパスワード" %><br />
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                <% end %>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control mb-3", disabled: @user.guest_member? %>
              </div>
              <div class="mb-4">
                <%= f.label :password_confirmation, "パスワード(確認)" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-3", disabled: @user.guest_member? %>
              </div>
              <div class="d-flex justify-content-center w-100">
                <%= f.submit "更新", class: "btn btn-secondary btn-lg w-100", disabled: @user.guest_member? %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
